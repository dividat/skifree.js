#!/usr/bin/env bash
set -euo pipefail

mkdir -p dist

# Run server

python -m http.server 8000 &
trap "lsof -ti:8000 | xargs kill -9" EXIT


# Watch TypeScript

CHECK="echo Checking TypeScriptâ€¦ && tsc --allowJs --noEmit"
BUILD="esbuild --bundle src/main.ts --outfile=dist/skifree.min.js"
watchexec \
  --clear \
  --watch src \
  -- "$CHECK && $BUILD"
